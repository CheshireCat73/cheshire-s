#include <stdio.h>
//using namespace std;

typedef struct klient {
 char name [40]; 
 char for_name [40];
 float geld;
}klient;
void main () 
{
 FILE *f; // указатель связанный с файлом
 klient e; // переменная
 klient mas[10]; //массив
 int i;
 //открываем файл
 f=fopen("f.dat", "wb");
 if (f==NULL) return; // если при 
 //открытии файла возникает ошибка, то выходим из функции
 for(i=1; i<=10;i++){
 // формируем запись е
 printf("name="); scanf("%s",&e.name);
 printf("for_name="); scanf("%s",&e. for_name);
 printf("geld="); scanf("%f",e.geld);
 // записываем запись е в файл
 fwrite(&e, sizeof(klient),1,f);
 if (ferror(f)) return;
 }
 fclose(f);
 //чтение записей из файла
 f=fopen("f.dat", "rb");
 if (f==NULL) return; // если при
 // открытии файла возникает ошибка, то выходим из функции
 i=0;
 while(!feof(f)&&i<=10) {
 fread(&mas[i], sizeof(klient), 1, f);
 i++;
 }
 fclose(f);
}
