#include <iostream>//Подключение библиотек
#include <stdio.h>
int a,b,c,d,s,h,l,p;//Объявление переменных
int main(){//Начальная точка программы
    printf("Введите координаты противоположных вершин прямоугольника(x1,y1,x2,y2)\n");//Ввод значений пользователем 
    scanf("%d%d%d%d",&a,&c,&b,&d);//Считывание значений переменных
    if (b>a){//Т.к. мы не знаем, какую из вершин пользователь введет первой, необходимо найти верхнюю вершину 
        l=(b-a);}//Для этого проверяем условия и находим бОльшие значения переменных
    else{
        l=(a-b);}
    if (d>c){
        h=(d-c);}
    else{
        h=(c-d);
    }
    s=(l*h);//Вычисление площади
    p=(2*h+2*l);//Вычисление периметра
    printf("Стороны параллелограмма, периметр и площадь\n");
    printf("%d\n%d\n%d\n%d\n",h,l,p,s);
    return 0;
}
