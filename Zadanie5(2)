#include <math.h>//Подключение библиотек
#include <stdio.h>
int a,b,c,d,s,h;//Объявление переменных
int main(){//Начальная точка программы
    printf("Введите значения А,В,С\n");//Ввод значений пользователем 
    scanf("%d%d%d",&a,&b,&c);//Считывание значений переменных
    d=(c-a);//Вычисление длины отрезка АС
    s=(c-b);//Вычисление длины отрезка ВС
    h=(s+d);//Вычисление суммы
    printf("Длины отрезков АС и ВС, и их сумма\n");
    printf("%d\n%d\n%d\n",d,s,h);
    return 0;
}
