#include <stdio.h> //Подключение библиотек
int i,j,c,p[]={12,18,16,11,14,17,13,15}; 
int n=sizeof(p)/sizeof(int); //Определение размера массива
int main(){ //Начало программы
    while(i<n){ //Начало внешнего цикла while 
        if(p[i-1]>p[i]){//Проверяем значения текущего эл-та и предшествущего
        c=p[i];
        p[i]=p[i-1];
        p[i-1]=c;
        i--;//Если условие верно, идем на шаг назад
        if (i>0) continue;//Если i>0 продолжаем сортировку
        }
        i=j++;//Идем на шаг вперед
    }
    for(i=0;i<n;i++){
        printf("p[%d]=%d\n",i,p[i]); //Вывод массива на экран
    }
    return 0;
}
