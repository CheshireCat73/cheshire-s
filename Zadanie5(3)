#include <math.h>//Подключение библиотек
#include <stdio.h>
int a,b,c,d,s,h;//Объявление переменных
int main(){//Начальная точка программы
    printf("Введите значения А,C,B\n");//Ввод значений пользователем 
    scanf("%d%d%d",&a,&c,&b);//Считывание значений переменных
    d=(c-a);//Вычисление длины отрезка АС
    s=(b-c);//Вычисление длины отрезка ВС
    h=(s*d);//Вычисление произведения
    printf("Длины отрезков АС и ВС, и их произведение\n");
    printf("%d\n%d\n%d\n",d,s,h);
    return 0;
}
